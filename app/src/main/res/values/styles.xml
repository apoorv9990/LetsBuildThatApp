    </style>

    <style name="textAppearanceListItemSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#99000000</item>
        <item name="android:letterSpacing">0.0179</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
